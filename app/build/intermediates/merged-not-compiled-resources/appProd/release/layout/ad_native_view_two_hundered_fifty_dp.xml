<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nativeAdView"
    android:layout_margin="@dimen/_3sdp"
    android:background="@drawable/privacy_btn_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone">
            </com.facebook.shimmer.ShimmerFrameLayout>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/iconLayout"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@+id/ad_call_to_action">

                <ImageView
                    android:id="@+id/ad_app_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher_round" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/ad_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iconLayout"
                android:lines="1"
                android:maxLength="25"
                android:maxLines="1"
                android:minWidth="100dp"
                android:textStyle="bold"
                android:visibility="gone"
                android:text="@string/app_name"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toEndOf="@+id/iconLayout"
                app:layout_constraintTop_toBottomOf="@+id/ad_call_to_action" />


            <TextView
                android:id="@+id/ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ad_headline"
                android:gravity="center"

                android:padding="@dimen/_2sdp"
                android:text="Ad"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_6sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ad_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ad_headline"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/iconLayout"
                android:maxLength="64"
                android:maxLines="2"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iconLayout"
                app:layout_constraintTop_toBottomOf="@+id/ad_headline" />

            <RatingBar
                android:id="@+id/ad_stars"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@id/ad_body"
                android:layout_toEndOf="@+id/iconLayout"
                android:isIndicator="true"
                android:theme="@style/RatingBar"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/ad_media"
                app:layout_constraintStart_toEndOf="@+id/iconLayout"
                app:layout_constraintTop_toBottomOf="@+id/ad_body" />
            <Button
                android:id="@+id/ad_call_to_action"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Continue"
                android:layout_marginTop="@dimen/_4sdp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="@dimen/_10ssp"
                android:background="@drawable/btn_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/ad_media"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="@dimen/_3sdp"
                android:visibility="gone"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.gms.ads.nativead.NativeAdView>